<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/IV_grid_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_settings_old"/>

    <RelativeLayout
        android:id="@+id/relativelayout_text"
        android:layout_alignBottom="@id/IV_grid_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/scrim">

    <TextView
        android:id="@+id/TV_grid_item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        android:text="yummly.com"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/TV_grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_above="@id/TV_grid_item_source"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        android:text="Chicken, Broccoli and Pasta Skilled Casserole "
        android:textSize= "8sp"/>

    </RelativeLayout>

</RelativeLayout>